{
  "name": "nextjs-routing-visualizer",
  "displayName": "Next.js Routing Visualizer",
  "publisher": "AliaSadiq",
  "description": "üìç Visualize Next.js routing structure and simulate navigation.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/AliaSadiq/nextjs-routing-visualizer"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pages",
    "workspaceContains:app",
    "workspaceContains:next.config.js",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onView:nextjsRoutes"
  ],
  "main": "./dist/extension.js",
 "contributes": {
  "views": {
    "explorer": [
      {
        "id": "nextjsRoutes",
        "name": "Next.js Routes"

      }
    ]
  },
  "viewsWelcome": [
    {
      "view": "nextjsRoutes",
      "contents": "Use the buttons above to refresh or filter routes.",
      "when": "view == nextjsRoutes"
    }
  ],
  "commands": [
    {
      "command": "nextjsRoutes.refresh",
      "title": "Refresh",
      "icon": {
        "light": "resources/refresh-light.svg",
        "dark": "resources/refresh-dark.svg"
      }
    },
    
    {
      "command": "nextjsRoutes.filterRoutes",
      "title": "Filter Routes",
      "icon": {
        "light": "resources/search-icon-light.svg",
        "dark": "resources/search-icon-dark.svg"
      }
    }
  ],
  "menus": {
    "view/title": [
      {
        "command": "nextjsRoutes.refresh",
        "when": "view == nextjsRoutes",
        "group": "navigation"
      },
      {
        "command": "nextjsRoutes.filterRoutes",
        "when": "view == nextjsRoutes",
        "group": "navigation"
      }
    ]
  }
}
,

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  
"files": [
  "out",
  "resources",
  "src",
  "README.md",
  "package.json"
],
"icon": "icon.png",

  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}